#include <stdio.h>
int main() {
 int item1_price, item2_price, total_price;
 float discount = 0.0;
 int has_discount, is_eligible_for_free_shipping;
 printf("Enter the price of item 1: ");
 scanf("%d", &item1_price);
 printf("Enter the price of item 2: ");
 scanf("%d", &item2_price);
 total_price = item1_price + item2_price;
 printf("\nTotal price before discount: %d\n", total_price);
 if (total_price > 100) 
 {
 discount = 0.1 * total_price;
 total_price -= discount;
 has_discount = 1;
 } else 
 {
 has_discount = 0;
 }
is_eligible_for_free_shipping = total_price > 50;

 printf("\nFinal total after discount (if applicable): %.2f\n", (float)total_price);
 if (has_discount) 
 {
 printf("A discount of %.2f was applied.\n", discount);
 }
else
{
 printf("No discount applied.\n");
 }
 if (is_eligible_for_free_shipping) {
 printf("Congratulations! You qualify for free shipping.\n");
 } else {
 printf("Shipping charges apply as the total is less than 50.\n");
 }
 return 0;
}
